@{
	ViewData["Title"] = "Home Page";

	var movies = ViewData["Movies"] as List<Movie>;
	var series = ViewData["Series"] as List<TvSeries>;
	var posts = ViewData["Posts"] as List<Post>;
}

@section MenuBar {
	<div class="menubar">

		<ul class="menu">
			<li class="selected"><a asp-action="Index">Home</a></li>
			<li><a asp-controller="Movies" asp-action="Index">Movies</a></li>
			<li><a href="#">Series</a></li>
			<li><a asp-controller="Rating" asp-action="Index">Rating movies</a></li>
			<li><a asp-controller="Contact" asp-action="Index">Contacts</a></li>
		</ul>

	</div>
}

<div class="content">

	<h1>New movies</h1>

	<div class="films_block">

		@for (int i = 0; i < movies?.Count; i++)
		{
			@if (movies[i].Title == "Interstellar")
			{
				<a asp-action="ShowMovie" asp-route-index="@i"><img src="~/images/@movies[i].ImageTitle"></a>
			}
			else 
			{
				<a href="#"><img src="~/images/@movies[i].ImageTitle"></a>
			}
		}

	</div>

	<h1>New series</h1>

	<div class="films_block">

		@for (int i = 0; i < series?.Count; i++)
		{
			@if (series?.Count == 0) // :)
			{
				<a asp-action="ShowTvSeries" asp-route-index="@i"><img src="~/images/@series[i].ImageTitle"></a>
			}
			else
			{
				<a href="#"><img src="~/images/@series[i].ImageTitle"></a>
			}
		}

	</div>

	<div class="posts">

		@for (int i = 0; i < posts.Count; i++)
		{
			<hr />

			<h2>
				@if (posts?.Count == 0) // :)
				{
					<a asp-action="ShowPost" asp-route-index="@i">@posts[i].Title</a>
				}
				else
				{
					<a href="#">@posts[i].Title</a>
				}
			</h2>
			
			<div class="posts_content">
				<p>@posts[i].Content</p>
			</div>

			<p>
			@if (posts?.Count == 0) // :)
			{
					<a asp-action="ShowPost" asp-route-index="@i">read</a>
			}
			else
			{
				<a href="#">read</a>
			}
			</p>
		}

	</div>

</div>